
@{
    ViewBag.Title = "Products";
}

<h2>Products</h2>
<a href="/Product/ViewCarts/">View your Carts</a>

<table class="table">
    <tr>
        <th>Product ID</th>
        <th>Product Name</th>
        <th>Price</th>
        <th>Add to Cart</th>
    </tr>

    @foreach (var p in Model)
    {
        <tr>
            <td>@p.id</td>
            <td>@p.Name</td>
            <td>@p.Price</td>
            <td>
                @Html.ActionLink("Add to Cart", "AddToCart", new { id = p.id })
            </td>
        </tr>
    }
</table>